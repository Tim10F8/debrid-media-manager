# Database Configuration
DATABASE_URL="mysql://username:password@host:port/database"

# DMM Configuration
DMM_ORIGIN=http://localhost:3000
DMMCAST_SALT=your-random-salt-here
REAL_DEBRID_OBSERVABILITY_SQLITE_PATH=.data/real-debrid-observability.sqlite
DMM_MAX_UNCACHED_LINKS=50

# Request timeout in milliseconds
REQUEST_TIMEOUT=5000

# SOCKS5 Proxy (optional - used for stream proxying)
# PROXY=localhost:9050

# Metadata APIs (optional)
# TMDB_KEY=your-tmdb-api-key
# OMDB_KEY=your-omdb-api-key
# MDBLIST_KEY=your-mdblist-api-key

# Trakt Integration (optional)
# TRAKT_CLIENT_ID=your-trakt-client-id
# TRAKT_CLIENT_SECRET=your-trakt-client-secret

# Real-Debrid (optional)
# REAL_DEBRID_CLIENT_ID=your-rd-client-id

# Authentication Providers (optional)
# PATREON_CLIENT_ID=your-patreon-client-id
# PATREON_CLIENT_SECRET=your-patreon-client-secret
# PATREON_CREATOR_ACCESS_TOKEN=your-patreon-access-token
# PATREON_CREATOR_REFRESH_TOKEN=your-patreon-refresh-token

# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# DISCORD_CLIENT_ID=your-discord-client-id
# DISCORD_PUBLIC_KEY=your-discord-public-key
# DISCORD_CLIENT_SECRET=your-discord-client-secret

# GitHub PAT (optional - for GitHub API access)
# GH_PAT=your-github-personal-access-token

# Redis Rate Limiting (optional - falls back to in-memory if not configured)
# REDIS_URL=redis://localhost:6379

# Zurgtorrent Sync
# ZURGTORRENT_SYNC_SECRET=your-sync-secret

# Feature Flags
NEXT_PUBLIC_ANALYTICS_ENABLED=false
